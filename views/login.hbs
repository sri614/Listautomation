<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login | Your App Name</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    /* Login Page Specific Styles */

    main{
        min-height: fit-content;
        background-color:transparent;
        box-shadow: none;
    }
    .login-page {
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      font-family: 'Poppins', sans-serif;
      padding: 20px;
      box-sizing: border-box;
    }

    .container-login {
      max-width: 430px;
      width: 100%;
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
      overflow: hidden;
      animation: fadeIn 0.5s ease-out forwards;
      opacity: 0;
      transform: scale(0.95);
    }

    @keyframes fadeIn {
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    .container-login .forms {
      display: flex;
      align-items: center;
      height: 440px;
      width: 200%;
      transition: height 0.2s ease;
    }

    .container-login .form {
      width: 50%;
      padding: 30px;
      background-color: #fff;
      transition: margin-left 0.18s ease, opacity 0.15s ease;
    }

    .container-login.active .login {
      margin-left: -50%;
      opacity: 0;
    }

    .container-login .signup {
      opacity: 0;
    }

    .container-login.active .signup {
      opacity: 1;
      transition-delay: 0.18s;
    }

    .container-login.active .forms {
      height: 600px;
    }

    .form .title {
      position: relative;
      font-size: 27px;
      font-weight: 600;
      margin-bottom: 20px;
    }

    .form .title::before {
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      height: 3px;
      width: 30px;
      background-color: #764ba2;
      border-radius: 25px;
    }

    .form .input-field {
      position: relative;
      height: 50px;
      width: 100%;
      margin-top: 30px;
    }

    .input-field input {
      position: absolute;
      height: 100%;
      width: 100%;
      padding: 0 35px;
      border: none;
      outline: none;
      font-size: 16px;
      border-bottom: 2px solid #ccc;
      border-top: 2px solid transparent;
      transition: all 0.2s ease;
    }

    .input-field input:is(:focus, :valid) {
      border-bottom-color: #764ba2;
    }

    .input-field i {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      color: #999;
      font-size: 23px;
      transition: all 0.2s ease;
    }

    .input-field i.icon {
      left: 0;
    }

    .input-field i.showHidePw {
      right: 0;
      cursor: pointer;
      padding: 10px;
    }

    .input-field input:is(:focus, :valid) ~ i {
      color: #764ba2;
    }

    .form .checkbox-text {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-top: 20px;
    }

    .checkbox-text .checkbox-content {
      display: flex;
      align-items: center;
    }

    .checkbox-content input {
      margin-right: 10px;
      accent-color: #764ba2;
    }

    .form .text {
      color: #333;
      font-size: 14px;
    }

    .form a.text {
      color: #764ba2;
      text-decoration: none;
    }

    .form a:hover {
      text-decoration: underline;
    }

    .form .button {
      margin-top: 35px;
    }

    .form .button input {
      border: none;
      color: #fff;
      font-size: 17px;
      font-weight: 500;
      letter-spacing: 1px;
      border-radius: 6px;
      background-color: #764ba2;
      cursor: pointer;
      transition: all 0.3s ease;
      width: 100%;
      padding: 12px 0;
    }

    .button input:hover {
      background-color: #5d3a8a;
    }

    .form .login-signup {
      margin-top: 30px;
      text-align: center;
    }

    /* Floating animation */
    .input-field {
      animation: floatIn 0.5s ease-out forwards;
      opacity: 0;
      transform: translateY(10px);
    }

    @keyframes floatIn {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Responsive adjustments */
    @media (max-width: 500px) {
      .container-login {
        margin: 0;
      }
      
      .container-login .forms {
        height: 400px;
      }
      
      .container-login.active .forms {
        height: 500px;
      }
      
      .container-login .form {
        padding: 20px;
      }
      
      .form .title {
        font-size: 24px;
      }
    }
  </style>
</head>
<body class="login-page">
  <div class="container-login">
    <div class="forms">
      <!-- Login Form -->
      <div class="form login">
        <span class="title">Login</span>
        
        <form action="/login" method="POST">
          <div class="input-field" style="animation-delay: 0.1s">
            <input type="email" name="email" placeholder="Enter your email" required>
            <i class="fas fa-envelope icon"></i>
          </div>
          <div class="input-field" style="animation-delay: 0.2s">
            <input type="password" name="password" class="password" placeholder="Enter your password" required>
            <i class="fas fa-lock icon"></i>
            <i class="fas fa-eye-slash showHidePw"></i>
          </div>
          
        
          
          <div class="input-field button" style="animation-delay: 0.4s">
            <input type="submit" value="Login">
          </div>
        </form>
        
        <div class="login-signup" style="animation-delay: 0.5s">
          <span class="text">Not a member?
            <a href="#" class="text signup-link">Signup now</a>
          </span>
        </div>
      </div>

      <!-- Signup Form -->
      <div class="form signup">
        <span class="title">Registration</span>
        
        <form action="#">
          <div class="input-field">
            <input type="text" placeholder="Enter your name" required>
            <i class="fas fa-user icon"></i>
          </div>
          <div class="input-field">
            <input type="email" placeholder="Enter your email" required>
            <i class="fas fa-envelope icon"></i>
          </div>
          <div class="input-field">
            <input type="password" class="password" placeholder="Create a password" required>
            <i class="fas fa-lock icon"></i>
          </div>
          <div class="input-field">
            <input type="password" class="password" placeholder="Confirm password" required>
            <i class="fas fa-lock icon"></i>
            <i class="fas fa-eye-slash showHidePw"></i>
          </div>
          
          
          
          <div class="input-field button">
            <input type="submit" value="Signup">
          </div>
        </form>
        
        <div class="login-signup">
          <span class="text">Already a member?
            <a href="#" class="text login-link">Login now</a>
          </span>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const containerLogin = document.querySelector(".container-login");
      const pwShowHide = document.querySelectorAll(".showHidePw");
      const pwFields = document.querySelectorAll(".password");
      const signUpLink = document.querySelector(".signup-link");
      const loginLink = document.querySelector(".login-link");
      
      // Show/hide password
      pwShowHide.forEach(eyeIcon => {
        eyeIcon.addEventListener("click", () => {
          pwFields.forEach(pwField => {
            if(pwField.type === "password") {
              pwField.type = "text";
              eyeIcon.classList.replace("fa-eye-slash", "fa-eye");
            } else {
              pwField.type = "password";
              eyeIcon.classList.replace("fa-eye", "fa-eye-slash");
            }
          });
        });
      });
      
      // Switch between forms
      signUpLink?.addEventListener("click", (e) => {
        e.preventDefault();
        containerLogin.classList.add("active");
      });
      
      loginLink?.addEventListener("click", (e) => {
        e.preventDefault();
        containerLogin.classList.remove("active");
      });
      
      // Animate input fields
      document.querySelectorAll('.input-field').forEach((field, index) => {
        field.style.animationDelay = `${index * 0.1 + 0.3}s`;
      });
    });
  </script>
</body>
</html>